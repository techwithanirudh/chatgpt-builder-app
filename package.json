{
  "name": "openai-apps-minimal-nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "lint:write": "biome lint --write .",
    "lint:unsafe": "biome lint --write --unsafe .",
    "check": "biome check .",
    "check:unsafe": "biome check --write --unsafe .",
    "check:write": "biome check --write .",
    "typecheck": "tsc --noEmit --incremental false",
    "check:spelling": "cspell -c .cspell.json --no-progress --no-summary --no-must-find-files --unique",
    "start": "next start"
  },
  "dependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@modelcontextprotocol/sdk": "^1.20.0",
    "mcp-handler": "^1.0.2",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "zod": "3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@cspell/dict-bash": "^4.2.1",
    "@cspell/dict-npm": "^5.2.17",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cspell": "^9.2.1",
    "lefthook": "^1.13.6",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "trustedDependencies": [
    "@tailwindcss/oxide"
  ]
}
